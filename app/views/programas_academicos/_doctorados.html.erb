<script type="text/javascript">initAddThis();</script>

<div class="container-fluid" id="resto-cuerpo">
	<div id="cuerpo" class="principal-chica uk-block-large">
	<div class="uk-width-1-1">
    <span class="titulo-grande"><%= t('programas.doctorados') %></span><br>
    <div class="uk-container-center"><img src="<%= image_url(@pics[0].foto.url) %>" alt="Historia de El Colegio de México"></div>
    <p>&nbsp;</p>
    <!--          Aquí empiezan las licenciaturas          -->


	<% Curso.where(:programa => "Doctorado").order(:titulo).each do |doc| %>
    <h2 class="vino uk-margin-large-top"><%= params[:locale] == "es" ? ("Doctorado en " + doc.titulo) : ("Doctorate in " + doc.traduccion_tit) %></h2>
    <div class="uk-grid uk-grid-large">
    <div class="uk-width-large-3-5 uk-text-left">
    <p><%= params[:locale] == "es" ? doc.descripcion : doc.traduccion_desc %></p>
    <% if !doc.liga.nil? %>
      <a href=<%= doc.liga %> target="_blank" class="ver-mas uk-margin-large-bottom uk-button-small"><%= t('programas.info') %></a>
    <% end %>
    </div>
    <div class="uk-width-large-2-5">
    <% if doc.fecha_inicio_clases.present? %>
    <h3 class="vino uk-margin-bottom-remove"><%= t('programas.promo') %></h3>
    <h4 class="uk-margin-top-remove"><%= l(doc.fecha_inicio_clases, format: :mes_anio ).capitalize %></h4>
    <% end %>
    <h3 class="vino uk-margin-bottom-remove"><%= t('programas.prox_conv') %></h3>
    <h4 class="uk-margin-top-remove">
			<% if doc.fecha_inicio_conv == doc.fecha_fin_conv %>
				<%= l(doc.fecha_inicio_conv, format: :mes_anio ).capitalize %>
			<% else %>
				<%= (params[:locale] == "es" ? "Abierta hasta " : "Open until ") + l(doc.fecha_fin_conv, format: :normal) %>
			<% end %>
		</h4>
    <!-- Go to www.addthis.com/dashboard to customize your tools -->
    <div class="addthis_inline_share_toolbox" data-url=<%= doc.liga %> data-title="<%= params[:locale] == "es" ? ("Doctorado en " + doc.titulo) : ("Doctorate in " + doc.traduccion_tit) %>"></div>
    </div>
    </div>
	<% end %>


    </div>
	
	</div>

<!-- Go to www.addthis.com/dashboard to customize your tools -->
<script type="text/javascript" src="https://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-57bb682464651c22"></script>
</div>
