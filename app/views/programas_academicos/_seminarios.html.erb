<script type="text/javascript">initAddThis();</script>
<% @seminarios.each do |sem| %>
	<div>
	<span class="titulo-chico vino"><%= sem.titulo.gsub(/<\/?((div)|(p))>/,"").mb_chars.html_safe %></span><br>
	<p><%= sem.descripcion.gsub(/<\/?p>/,"").mb_chars.html_safe %></p>
	<a href=<%= sem.liga %> target="_blank" class="ver-mas uk-margin-large-bottom uk-button-small">Más información</a>
	<div class="addthis_inline_share_toolbox" data-url=<%= sem.liga %> data-title="<%= sem.titulo.gsub(/<\/?((div)|(p))>/,"").mb_chars %>" style="display:inline-block; float: right;"></div>
	</div>
<% end %>

