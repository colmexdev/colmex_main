<%= form_for(@premiado) do |f| %>
  <% if @premiado.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@premiado.errors.count, "error") %> prohibited this premiado from being saved:</h2>

      <ul>
      <% @premiado.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion %>
  </div>
  <div class="field">
    <%= f.label :tipo_premio %><br>
    <%= f.select(:tipo_premio, options_for_select([['Otorgados a la comunidad', 'Comunidad'], ['Otorgados por El Colegio', 'Colegio']], @premiado.tipo_premio || 'Otorgados a la comunidad'), {}, {}) %>
  </div>
  <div class="field">
    <%= f.label :liga %><br>
    <%= f.text_field :liga %>
  </div>
  <div class="field">
    <%= f.label :tipo %><br>
    <%= f.select(:tipo, options_from_collection_for_select(Categorium.all, "nombre", "nombre", @premiado.tipo || Categorium.first.nombre), {}, {}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
