<input type="text" name="keyword" id="keyword" <%= params[:keyword].present? ? 'value='+params[:keyword] : "" %> placeholder="Palabra clave" onchange="hideLink(event,'#index-panel','<%= panel_index_path(set: params[:set], offset: 0) %>',null,this.value)"><br>

<% if params[:set] == "Descubre" %>
	<%= select_tag "query[contenido]", options_for_select(Descubre.select(:contenido).distinct.pluck(:contenido).map{|c| [c,c]}), include_blank: "Todos" %>
<% end %>

<script type="text/javascript">
	var pars = filteredParams("<%= params[:set] %>");
	for(var i in pars){
		$("#query_"+pars[i]).on("change",function(){
			buildQuery(pars);
		});
	}
</script>
