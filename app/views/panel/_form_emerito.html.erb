<%= form_for(@obj, :remote => true, :url => {:controller => "panel", :action => (action_name == "editar" ? "editar : "crear"), :params => {:set => "Profesores emÃ©ritos", :id => @obj.id if action_name == "editar"}}, :html => { :multipart => true }) do |f| %>
  <% if @obj.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@obj.errors.count, "error") %> impidieron generar este objeto:</h2>

      <ul>
      <% @obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :fecha_anexion %><br>
    <%= f.text_field :fecha_anexion, {"data-uk-datepicker" => "{format: 'YYYY-MM-DD'}"} %>
  </div>
  <div class="field">
    <%= f.label :centro %><br>
    <%= f.select(:centro, [['CEAA','CEAA'],['CEDUA','CEDUA'],['CEE','CEE'],['CEH','CEH'],['CEI','CEI'],['CELL','CELL'],['CES','CES']], :selected => (@obj.centro || 'CEAA')) %>
  </div>
  <div class="field">
    <%= f.label :semblanza %><br>
    <%= f.text_area :semblanza %>
  </div>
  <div class="field">
    <%= f.label :semblanza_eng %><br>
    <%= f.text_area :semblanza_eng %>
  </div>
  <div class="field">
    <%= f.label :foto %><br>
    <%= f.file_field :foto %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
