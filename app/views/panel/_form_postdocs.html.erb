<%= form_for(@obj, :remote => true, :url => {:controller => "panel", :action => (action_name == "editar" ? "editar" : "crear"), :params => {:set => params[:set], :id => (@obj.id if action_name == "editar")}}, :html => { :multipart => true }) do |f| %>
  <% if @obj.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@obj.errors.count, "error") %> impidieron generar este objeto:</h2>

      <ul>
      <% @obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <div class="field">
    <%= f.label :nombre, "Nombre" %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :proyecto, "Proyecto o seminario" %><br>
		<%= f.text_field :proyecto %>
  </div>
  <div class="field">
    <%= f.label :centro, "Adscripción" %><br>
    <%= f.select(:centro, [['CEAA','CEAA'],['CEDUA','CEDUA'],['CEE','CEE'],['CEH','CEH'],['CEI','CEI'],['CELL','CELL'],['CES','CES']], :selected => (@obj.centro || 'CEAA')) %>
  </div>
  <div class="field">
    <%= f.label :correo, "Correo electrónico" %><br>
    <%= f.text_field :correo %>
  </div>
  <div class="field">
    <%= f.label :sitio, "Sitio web" %><br>
    <%= f.text_field :sitio %>
  </div>
  <div class="field">
    <%= f.label :extension, "Extensión telefónica" %><br>
    <%= f.number_field :extension %>
  </div>
  <div class="field">
    <%= f.label :temas, "Temas de investigación" %><br>
    <%= f.text_area :temas %>
  </div>
  <div class="field">
    <%= f.label :index, "Índice de aparición" %><br>
    <%= f.number_field :index, min: 1, step: 1, value: (@obj.index || (Beneficiary.count + 1)) %>
  </div>
  <div class="field" style="height:250px;">
		<div class="photo-upload">
    <%= f.label :foto, raw('<span class="glyphicon glyphicon-upload glyph-padding"></span>Añadir foto') %><br>
    <%= f.file_field :foto, :onchange => "readURL(this,'#foto-emerito')" %><br>
		</div>
		<div class="img-display">
			<% if !@obj.foto.url.nil? %>
				<img id="foto-emerito" src="<%= @obj.foto.url %>">
			<% else %>
				<span>No hay foto para mostrar.</span>
			<% end %>
		</div>
  </div>
  <div class="actions">
    <%= f.submit "Generar becario" %>
  </div>
<% end %>
