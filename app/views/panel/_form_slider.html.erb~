<%= form_for(@slider, :html=> { :multipart => true}) do |f| %>
  <% if @slider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@slider.errors.count, "error") %> prohibited this slider from being saved:</h2>

      <ul>
      <% @slider.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :liga %><br>
    <%= f.text_field :liga %>
  </div>
  <div class="field">
    <%= f.label :imagen %><br>
    <%= f.file_field :imagen %>
  </div>
  <div class="field">
    <%= f.label :badge %><br>
    <%= f.file_field :badge %>
  </div>
  <div class="field">
    <%= f.label :badge_eng %><br>
    <%= f.file_field :badge_eng %>
  </div>
  <div class="field">
    <%= f.label :posicion %><br>
    <%= f.select(:posicion, [['Superior izquierda','SI'],['Superior derecha','SD'],['Inferior derecha','ID'],['Inferior izquierda','II']], :selected => (@slider.posicion || 'SI')) %>
  </div>
  <div class="field">
    <%= f.label :fecha_expiracion %><br>
    <%= f.text_field :fecha_expiracion, {"data-uk-datepicker" => "format: {'YYYY-MM-DD'}"} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
