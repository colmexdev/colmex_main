<% if admin_signed_in? %>

<p id="notice"><%= notice %></p>

<h1>Listado de <%= params[:set] %></h1>

<table>
  <thead>
    <tr>
			<% @fields.each do |f| %>
			<td><%= f %></td>
			<% end %>
			<% @foto.each do |f| %>
			<td><%= f %>
			<% end %>
    </tr>
  </thead>

  <tbody>
    <% @set.each do |s| %>
      <tr>
				<% @fields.each do |f| %>
        <td><%= s[f] %></td>
				<% end %>
				<% @foto.each do |f| %>
					<% if f == "foto" %>
						<td><%= image_tag(s.foto.url ) %></td>
					<% end %>
				<% end %>
				<% if false %>
        <td><%= link_to 'Show', s %></td>
        <td><%= link_to 'Edit', edit_emerito_path(s) %></td>
        <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if false %>
<%= link_to 'Nuevo s', new_emerito_path %><br>
<% end %>
<%= link_to "Regresar", panel_path %>
<% end %>
