<%= form_for(@catedra) do |f| %>
  <% if @catedra.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@catedra.errors.count, "error") %> prohibited this catedra from being saved:</h2>

      <ul>
      <% @catedra.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :titulo_eng %><br>
    <%= f.text_field :titulo_eng %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion %>
  </div>
  <div class="field">
    <%= f.label :descripcion_eng %><br>
    <%= f.text_area :descripcion_eng %>
  </div>
  <div class="field">
    <%= f.label :liga %><br>
    <%= f.text_field :liga %>
  </div>
  <div class="field">
    <%= f.label :tipo %><br>
		<%= f.select(:tipo, [["Institucionales", "Institucionales"], ["CEAA", "CEAA"],["CEDUA","CEDUA"],["CEE","CEE"],["CEH","CEH"],["CEI","CEI"],["CELL","CELL"],["CES","CES"]], :selected => (@catedra.tipo || 'Institucionales')) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
