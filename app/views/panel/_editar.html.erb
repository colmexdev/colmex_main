<script type="text/javascript">
extendTrix();

function extendTrix(){
	try{
		Trix.config.textAttributes.color = { 
			style: { color: "#7E3355" },
  		parser: function(element) {
  			return element.style.color === "#7E3355"
  		},
  		inheritable: true
 		}
 		var buttonHTML = "<button type=\"button\" class=\"trix-button trix-button-icon\" data-trix-attribute=\"color\" title=\"Color\" tabindex=\"-1\"><span style=\"color:#7E3355;\"></span></button>";
		var groupElement = Trix.config.toolbar.content.querySelector(".block_tools");
		groupElement.insertAdjacentHTML("beforeend", buttonHTML);
	}
	catch(err){
		console.log(err);
	} 
}
</script>

