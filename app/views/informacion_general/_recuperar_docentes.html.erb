<script type="text/javascript" src="/js/filtro_directorio_async.js"></script>
		<div class="row" id="filtros-dir">
			<div class="col-xs-12" style="padding-left:0;">
				<h3><%= params[:locale] == "es" ? "Buscar por orden alfabético." : "Search by last name's first letter." %></h3>
			</div>
			<div class="col-xs-12" id="filtro-inic" style="text-align:center;padding-left:0;">
			<% for i in 65..90 %>
				<span class="inics letra" id=<%= "inic_" + i.chr %> style="cursor:pointer; margin:0 3px;font-size:24px;color:#909090;" onclick=<%= "filtrarDirectorio('" + i.chr + "')" %>><%= i.chr %></span>
			<% end %>
			</div>
			<div class="col-md-4 col-xs-12 filtro center" id="filtro-nombre">
				<h3 style="display:inline-block;margin-right:8px;"><%= params[:locale] == "es" ? "Buscar por:" : "Search by:" %></h3><%= text_field_tag("nombre", "", :oninput => "filtrarDirectorio();", :placeholder => (params[:locale] == "es" ? "Nombre" : "Name")) %>
			</div>
			<div class="col-md-4 col-xs-12 center" id="filtro-linea" style="padding-left:5px;">
				<%= text_field_tag("linea", "", :oninput => "filtrarDirectorio();", :placeholder => (params[:locale] == "es" ? "Tema y/o línea de investigación" : "Research topic(s)" )) %><br>
				<% if false %>
				<p style="font-size:12px;margin-top:0;text-align:left;">Los temas de investigación utilizan lenguaje libre.</p>
				<% end %>
			</div>
			<% if false %>
			<div class="col-md-4 col-xs-12 center" id="filtro-mail" style="padding-left:15px;">
				<%= text_field_tag("correo", "", :oninput => "filtrarDirectorio();", :placeholder => (params[:locale] == "es" ? "Línea de investigación" : "Research line")) %><br>
				<p style="font-size:12px;margin-top:0;text-align:left;">Las líneas de investigación utilizan lenguaje controlado.</p>
			</div>
			<% end %>
		</div>
		<div class="row">
			<div class="col-xs-12 col-md-4 center" id="filtro-centro">
				<h3 style="display:inline-block;margin-right:8px;"><%= params[:locale] == "es" ? "Filtrar por:" : "Filter by:" %></h3><%= select_tag("contenido", options_for_select([["CEAA", "Asia y África"], ["CEDUA","Demográficos, Urbanos y Ambientales"], ["CEE", "Económicos"], ["CEH","Históricos"], ["CEI","Internacionales"], ["CELL", "Lingüisticos y Literarios"], ["CES","Sociológicos"]]), :include_blank => "Centro de Estudios", :onchange => "filtrarDirectorio();") %>
			</div>
			<div class="col-xs-12 col-md-4 center" id="filtro-limpiar" style="text-align:left;">
				<div id="boton_limpiar">
					<a href="#" onclick="borrarDocentes(event,docentes);" class="boton-donar"><span><%= params[:locale] == "es" ? "Limpiar búsqueda" : "Reset filters" %></span></a>
				</div>
			</div>
		</div>

		<div class="row">
			<script type="text/javascript" src="../js/accordion.js"></script>
			<div class="col-xs-12" style="text-align:left;padding-top:20px;" id="filete-top">
				<h2 id="frase-linea"></h2>
			</div>
			<div class="col-xs-12 acordeon-premios" id="busqueda">
				<div class="uk-accordion" id="acordeon" data-uk-accordion>

				</div>
			</div>
		</div>
		<div id="separadores" style="text-align:center;margin:10px auto;">
		</div>
	</div>
