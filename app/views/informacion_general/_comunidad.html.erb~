<div class="acordeon-premios">
<script type="text/javascript" src="../js/accordion.js"></script>

	<div class="uk-accordion" data-uk-accordion>
		<% @categorias.each do |c| %>
			<h3 class="uk-accordion-title"><%= construir_encabezado("bt-flechita.png", "bt-flechita-abajo.png", (params[:locale] != "en" ? c.nombre : c.nombre_eng)) %></h3>
			<div class="uk-accordion-content">
				<ul class="uk-list uk-list-line">
				<% @premiados.where("tipo = ?", c.nombre).order(:nombre).each do |p| %>
					<li style="margin-bottom: 20px; font-size: 15px;"><p><%= (p.nombre.gsub(/<\/?div>/,"").split(",").reverse.join(" ") + ", " + p.descripcion.gsub(/<\/?div>/,"").gsub(/<a href="/,"<a class=\"uk-link\" target=\"_blank\" href=\"")).html_safe %></p></li>
				<% end %>
				</ul>
			</div>
		<% end %>
	</div>
