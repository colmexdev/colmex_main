				<% contenidos = Descubre.where("fecha_publicacion <= ? AND fecha_limite_pub >= ?", Date.current(), Date.current()).group(:contenido).order(:contenido) %>
				<% cont_plural, cont = [], [] %>
				<% contenidos.each do |c| %>
					<% cont_plural << pluralizar(c.contenido,(params[:locale] == "en" ? 1 : 0)) %>
					<% cont << c.contenido %>
				<% end %>
				<% contenidos = [] %>
				<% for i in 0..cont.length-1 %>
					<% contenidos << [cont_plural[i], cont[i]] %>
				<% end %>
				<span class="span-filtros"><%= t('filtro') %></span>
				<%= select_tag("contenido", options_for_select(contenidos), :include_blank => t('cat'), :onchange => "filtrarDescubres();") %>
				<%= text_field_tag("tags", "", :oninput => "filtrarDescubres();", :placeholder => t('cont')) %>
